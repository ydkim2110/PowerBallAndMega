<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp"
    android:paddingHorizontal="16dp">

    <TextView
        android:id="@+id/txt_draw_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Winning Numbers: Sat, 01/01/2020"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        android:textAlignment="center"
        android:fontFamily="@font/ubuntu_medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txt_multiplier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="MultiPlier 2X"
        android:textSize="14dp"
        android:textColor="@color/colorTextSecondary"
        android:textAlignment="center"
        android:fontFamily="@font/ubuntu_regular"
        app:layout_constraintTop_toBottomOf="@+id/txt_draw_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/layout_ball"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_multiplier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/txt_number1"
            style="@style/TextNumberBallSmall"
            tools:text="1"
            android:background="@drawable/bg_ball"
            android:gravity="center" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txt_number2"
            style="@style/TextNumberBallSmall"
            tools:text="1"
            android:background="@drawable/bg_ball"
            android:gravity="center" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txt_number3"
            style="@style/TextNumberBallSmall"
            tools:text="1"
            android:background="@drawable/bg_ball"
            android:gravity="center" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txt_number4"
            style="@style/TextNumberBallSmall"
            tools:text="1"
            android:background="@drawable/bg_ball"
            android:gravity="center" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txt_number5"
            style="@style/TextNumberBallSmall"
            tools:text="1"
            android:background="@drawable/bg_ball"
            android:gravity="center" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txt_number6"
            style="@style/TextNumberBallSmall"
            tools:text="1"
            android:background="@drawable/bg_ball"
            android:gravity="center" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Your Result: "
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        android:textAlignment="center"
        android:fontFamily="@font/ubuntu_medium"
        app:layout_constraintTop_toBottomOf="@+id/layout_ball"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

