<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingStart="8dp"
    android:paddingTop="4dp"
    android:paddingEnd="8dp"
    android:paddingBottom="4dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/textTitle">

    <CheckBox
        android:id="@+id/chkSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:minWidth="0dp"
        android:minHeight="0dp" />

    <TextView
        android:id="@+id/txt_number1"
        style="@style/TextNumberBallSmall"
        tools:text="1"
        android:background="@drawable/bg_ball"
        android:gravity="center" />

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/txt_number2"
        style="@style/TextNumberBallSmall"
        tools:text="1"
        android:background="@drawable/bg_ball"
        android:gravity="center" />

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/txt_number3"
        style="@style/TextNumberBallSmall"
        tools:text="1"
        android:background="@drawable/bg_ball"
        android:gravity="center" />

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/txt_number4"
        style="@style/TextNumberBallSmall"
        tools:text="1"
        android:background="@drawable/bg_ball"
        android:gravity="center" />

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/txt_number5"
        style="@style/TextNumberBallSmall"
        tools:text="1"
        android:background="@drawable/bg_ball"
        android:gravity="center" />

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/txt_number6"
        style="@style/TextNumberBallSmall"
        tools:text="1"
        android:background="@drawable/bg_ball"
        android:gravity="center" />

</LinearLayout>