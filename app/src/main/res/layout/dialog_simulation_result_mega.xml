<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDialogBackground">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/logo_megamillions"
        android:contentDescription="@string/app_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Your Result: 5/1000"
        android:textSize="18sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_result">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_power_jackpot"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:src="@drawable/mega_jackpot"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/txt_power_jackpot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:text="1회"
                app:layout_constraintBottom_toBottomOf="@+id/img_power_jackpot"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_power_jackpot"
                app:layout_constraintTop_toTopOf="@+id/img_power_jackpot" />

            <ImageView
                android:id="@+id/img_power_ball5"
                android:layout_width="155dp"
                android:layout_height="35dp"
                android:src="@drawable/mega_ball5"
                app:layout_constraintTop_toBottomOf="@+id/img_power_jackpot"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/txt_power_ball5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1회"
                app:layout_constraintBottom_toBottomOf="@+id/img_power_ball5"
                app:layout_constraintEnd_toEndOf="@id/txt_power_jackpot"
                app:layout_constraintTop_toTopOf="@+id/img_power_ball5" />

            <ImageView
                android:id="@+id/img_power_ball4_hit"
                android:layout_width="170dp"
                android:layout_height="35dp"
                android:src="@drawable/mega_ball4_hit"
                app:layout_constraintTop_toBottomOf="@+id/img_power_ball5"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/txt_power_ball4_hit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1회"
                app:layout_constraintBottom_toBottomOf="@+id/img_power_ball4_hit"
                app:layout_constraintEnd_toEndOf="@id/txt_power_jackpot"
                app:layout_constraintTop_toTopOf="@+id/img_power_ball4_hit" />

            <ImageView
                android:id="@+id/img_power_ball4"
                android:layout_width="125dp"
                android:layout_height="35dp"
                android:src="@drawable/mega_ball4"
                app:layout_constraintTop_toBottomOf="@+id/img_power_ball4_hit"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/txt_power_ball4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1회"
                app:layout_constraintBottom_toBottomOf="@+id/img_power_ball4"
                app:layout_constraintEnd_toEndOf="@id/txt_power_jackpot"
                app:layout_constraintTop_toTopOf="@+id/img_power_ball4" />

            <ImageView
                android:id="@+id/img_power_ball3_hit"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:src="@drawable/mega_ball3_hit"
                app:layout_constraintTop_toBottomOf="@+id/img_power_ball4"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/txt_power_ball3_hit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1회"
                app:layout_constraintBottom_toBottomOf="@+id/img_power_ball3_hit"
                app:layout_constraintEnd_toEndOf="@id/txt_power_jackpot"
                app:layout_constraintTop_toTopOf="@+id/img_power_ball3_hit" />


            <ImageView
                android:id="@+id/img_power_ball3"
                android:layout_width="95dp"
                android:layout_height="35dp"
                android:src="@drawable/mega_ball3"
                app:layout_constraintTop_toBottomOf="@+id/img_power_ball3_hit"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/txt_power_ball3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1회"
                app:layout_constraintBottom_toBottomOf="@+id/img_power_ball3"
                app:layout_constraintEnd_toEndOf="@id/txt_power_jackpot"
                app:layout_constraintTop_toTopOf="@+id/img_power_ball3" />

            <ImageView
                android:id="@+id/img_power_ball2_hit"
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:src="@drawable/mega_ball2_hit"
                app:layout_constraintTop_toBottomOf="@+id/img_power_ball3"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/txt_power_ball2_hit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1회"
                app:layout_constraintBottom_toBottomOf="@+id/img_power_ball2_hit"
                app:layout_constraintEnd_toEndOf="@id/txt_power_jackpot"
                app:layout_constraintTop_toTopOf="@+id/img_power_ball2_hit" />

            <ImageView
                android:id="@+id/img_power_ball1_hit"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:src="@drawable/mega_ball1_hit"
                app:layout_constraintTop_toBottomOf="@+id/img_power_ball2_hit"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/txt_power_ball1_hit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1회"
                app:layout_constraintBottom_toBottomOf="@+id/img_power_ball1_hit"
                app:layout_constraintEnd_toEndOf="@id/txt_power_jackpot"
                app:layout_constraintTop_toTopOf="@+id/img_power_ball1_hit" />

            <ImageView
                android:id="@+id/img_power_hit"
                android:layout_width="33dp"
                android:layout_height="35dp"
                android:src="@drawable/mega_hit"
                app:layout_constraintTop_toBottomOf="@+id/img_power_ball1_hit"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/txt_power_hit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1회"
                app:layout_constraintBottom_toBottomOf="@+id/img_power_hit"
                app:layout_constraintEnd_toEndOf="@id/txt_power_jackpot"
                app:layout_constraintTop_toTopOf="@+id/img_power_hit" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>