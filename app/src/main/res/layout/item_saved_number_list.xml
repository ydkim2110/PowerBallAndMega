<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

    <TextView
        android:id="@+id/txt_number1"
        style="@style/TextNumberBallSmall"
        android:background="@drawable/bg_ball"
        android:gravity="center"
        tools:text="1" />

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/txt_number2"
        style="@style/TextNumberBallSmall"
        android:background="@drawable/bg_ball"
        android:gravity="center"
        tools:text="1" />

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/txt_number3"
        style="@style/TextNumberBallSmall"
        android:background="@drawable/bg_ball"
        android:gravity="center"
        tools:text="1" />

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/txt_number4"
        style="@style/TextNumberBallSmall"
        android:background="@drawable/bg_ball"
        android:gravity="center"
        tools:text="1" />

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/txt_number5"
        style="@style/TextNumberBallSmall"
        android:background="@drawable/bg_ball"
        android:gravity="center"
        tools:text="1" />

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/txt_number6"
        style="@style/TextNumberBallSmall"
        android:background="@drawable/bg_ball"
        android:gravity="center"
        tools:text="1" />

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/btnDelete"
        android:src="@drawable/ic_delete"
        android:contentDescription="@string/app_name"
        android:padding="4dp"
        android:background="?selectableItemBackgroundBorderless"
        android:layout_width="35dp"
        android:layout_height="35dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>