<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnSpin">

        <androidx.core.widget.NestedScrollView
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_intro"
                    android:text="Pick 5 Number"
                    android:textSize="18sp"
                    android:textColor="@color/colorTextPrimary"
                    android:textAlignment="center"
                    android:fontFamily="@font/ubuntu_medium"
                    android:includeFontPadding="false"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:id="@+id/frame"
                    android:layout_width="match_parent"
                    android:layout_height="360dp">

                    <ImageView
                        android:id="@+id/wheel"
                        android:layout_width="320dp"
                        android:layout_height="320dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_roulette_pick5" />

                    <ImageView
                        android:id="@+id/triangle"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp"
                        android:contentDescription="@string/app_name"
                        app:layout_constraintEnd_toEndOf="@id/frame"
                        app:layout_constraintStart_toStartOf="@id/frame"
                        app:layout_constraintTop_toBottomOf="@id/app_bar"
                        app:srcCompat="@drawable/ic_navigation" />

                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_ball"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtResult"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_ball_gray_roulette"
                            android:gravity="center"
                            android:text="\?"
                            android:textColor="@android:color/white"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/ubuntu_medium"
                            android:includeFontPadding="false" />

                    </LinearLayout>

                </FrameLayout>

                <TextView
                    android:id="@+id/txtReStart"
                    android:text="Restart"
                    android:textColor="@color/colorTextSecondary"
                    android:fontFamily="@font/ubuntu_regular"
                    android:includeFontPadding="false"
                    android:padding="8dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/frame"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:id="@+id/layoutResultContainer"
                        android:layout_width="match_parent"
                        android:layout_margin="16dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal" />

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieFireworks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:lottie_rawRes="@raw/fireworks"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:visibility="gone" />

    </FrameLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSpin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal"
        android:text="Spin"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/ubuntu_medium"
        android:includeFontPadding="false"
        android:background="@null"
        android:backgroundTint="@color/colorAction"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/ad_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/ad_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/ad_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>