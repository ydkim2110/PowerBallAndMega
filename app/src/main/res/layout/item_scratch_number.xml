<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layout_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" >

        <TextView
            android:id="@+id/txt_number1"
            style="@style/TextNumberBall"
            android:background="@drawable/bg_ball_outline"
            android:gravity="center"
            tools:text="1" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txt_number2"
            style="@style/TextNumberBall"
            android:background="@drawable/bg_ball_outline"
            android:gravity="center"
            tools:text="1" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txt_number3"
            style="@style/TextNumberBall"
            android:background="@drawable/bg_ball_outline"
            android:gravity="center"
            tools:text="1" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txt_number4"
            style="@style/TextNumberBall"
            android:background="@drawable/bg_ball_outline"
            android:gravity="center"
            tools:text="1" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txt_number5"
            style="@style/TextNumberBall"
            android:background="@drawable/bg_ball_outline"
            android:gravity="center"
            tools:text="1" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txt_number6"
            style="@style/TextNumberBall"
            android:background="@drawable/bg_ball_outline"
            android:gravity="center"
            tools:text="1" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>